def compress_message(msg):
    compressed_msg = ""
    count = 1

    for i in range(1, len(msg)):
        if msg[i] == msg[i - 1]:
            count += 1
        else:
            if count > 1:
                compressed_msg += msg[i - 1] + str(count)
            else:
                compressed_msg += msg[i - 1]
            count = 1

    # Handle the last character(s)
    if count > 1:
        compressed_msg += msg[-1] + str(count)
    else:
        compressed_msg += msg[-1]

    return compressed_msg

# Input
msg = input()

# Compress the message
compressed_message = compress_message(msg)

# Output the compressed message
print(compressed_message)
